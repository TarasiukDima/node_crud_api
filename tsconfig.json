{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES5",
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true
  }
}
